{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build/windows_ninja"
    },
    "tasks": [
        {
            "label": "CMake (Windows Ninja)",
            "type": "shell",
            "command": "cmake ../.. -G \"Ninja\" -DOPENWRIST=ON -DTESTS=ON -DEXAMPLES=ON",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Ninja (Windows)",
            "type": "shell",
            "command": "ninja -j 5",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}